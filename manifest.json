{
  "manifest_version": 3,
  "name": "Job Automation Extension",
  "version": "1.0",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "webNavigation"
  ],
  "host_permissions": [
    "https://*.linkedin.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["config.js", "automation.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["popup.js", "styles.css"],
      "matches": ["<all_urls>"]
    }
  ]
}